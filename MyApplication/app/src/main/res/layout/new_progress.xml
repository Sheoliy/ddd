<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="航空港校区"
        android:textColor="#000000"
        android:layout_below="@+id/imageView_7"
        android:layout_alignRight="@+id/imageView_7"
        android:layout_alignEnd="@+id/imageView_7" />

    <ImageView
        android:id="@+id/imageView_7"
        android:src="@drawable/bottles"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="84dp"
        android:layout_marginStart="84dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="98dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="武侯校区"
        android:textColor="#000000"
        android:layout_below="@+id/imageView_8"
        android:layout_alignRight="@+id/imageView_8"
        android:layout_alignEnd="@+id/imageView_8" />

    <ImageView
        android:id="@+id/imageView_8"
        android:src="@drawable/cocktail"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/imageView_7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="82dp"
        android:layout_marginEnd="82dp"
        android:layout_above="@+id/textView" />

</RelativeLayout>
