<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#F0F3F6"
    >
    <ImageView
        android:id="@+id/imageView_2"
        android:src="@drawable/card"
        android:scaleType="centerInside"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一卡通说明"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/imageView_2"
        android:layout_alignRight="@+id/imageView_2"
        android:layout_alignEnd="@+id/imageView_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="校园网络"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/imageView_3"
        android:layout_alignRight="@+id/imageView_3"
        android:layout_alignEnd="@+id/imageView_3" />

    <ImageView
        android:id="@+id/imageView_4"
        android:src="@drawable/car_time"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp" />

    <ImageView
        android:id="@+id/imageView_3"
        android:src="@drawable/net"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="校车时刻表"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/imageView_4"
        android:layout_alignLeft="@+id/imageView_4"
        android:layout_alignStart="@+id/imageView_4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注意事项"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/imageView_5"
        android:layout_alignRight="@+id/imageView_5"
        android:layout_alignEnd="@+id/imageView_5"
        android:id="@+id/textView" />

    <ImageView
        android:id="@+id/imageView_5"
        android:src="@drawable/attention"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/imageView_2"
        android:layout_alignLeft="@+id/imageView_2"
        android:layout_alignStart="@+id/imageView_2" />

    <ImageView
        android:id="@+id/imageView_6"
        android:src="@drawable/flow"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/imageView_5"
        android:layout_alignLeft="@+id/imageView_3"
        android:layout_alignStart="@+id/imageView_3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="报道流程"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/imageView_6"
        android:layout_alignRight="@+id/imageView_6"
        android:layout_alignEnd="@+id/imageView_6"
        android:id="@+id/imageView"/>

    <ImageView
        android:id="@+id/imageView_7"
        android:src="@drawable/map"
        android:scaleType="centerInside"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/imageView_6"
        android:layout_alignLeft="@+id/imageView_4"
        android:layout_alignStart="@+id/imageView_4" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学校地图"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/imageView_7"
        android:layout_alignLeft="@+id/imageView_7"
        android:layout_alignStart="@+id/imageView_7" />

    <ImageView
        android:id="@+id/imageView_8"
        android:src="@drawable/route"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交通出行"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/imageView_8"
        android:layout_alignRight="@+id/imageView_8"
        android:layout_alignEnd="@+id/imageView_8"
        />

    <ImageView
        android:id="@+id/imageView_1"
        android:src="@drawable/school"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/imageView_8"
        android:layout_alignLeft="@+id/imageView_6"
        android:layout_alignStart="@+id/imageView_6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="校园概况"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/imageView_1"
        android:layout_alignRight="@+id/imageView_1"
        android:layout_alignEnd="@+id/imageView_1" />


</RelativeLayout>

